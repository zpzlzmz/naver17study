package day1210;

public class Ex9Argument {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("메인 Argument 값 읽기 문제");
		/*
		 * 이상욱
		 * 삼성전자
		 * 홍보부
		 * 89
		 * 100
		 * 72
		 * 
		 * 이름
		 * 회사명
		 * 부서
		 * 3과목의 입사 시험 점수 
		 * (score1,2,3)
		 */
		
		String name = args[0];
		String emp = args[1];
		String dept = args[2];
		int score1 = Integer.parseInt(args[3]);
		int score2 = Integer.parseInt(args[4]);
		int score3 = Integer.parseInt(args[5]);
		int total = score1 + score2 + score3;
		double avg = total/3.0;
		double realavg = Math.round(avg*100)/100.0;
		System.out.println("이름:"+name);
		System.out.println("회사명:"+emp);
		System.out.println("부서:"+dept);
		System.out.println("입사 시험 국어점수:"+score1);
		System.out.println("입사 시험 영어점수:"+score2);
		System.out.println("입사 시험 수학점수:"+score3);
		System.out.printf("입사 시험 평균점수:%.1f",avg);
		
		
		
	}

}



