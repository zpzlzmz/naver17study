package day1210;

public class Ex5DataType {
	public static void main(String []args) {
		
		char ch1='A';
		char ch2='가';
		System.out.println("ch1="+ch1);
		System.out.println("ch2="+ch2);
		//printf로 출력시 변환기호 1글자 :%c, 문자열 :%s
		System.out.printf("%c\t%c\n", ch1,ch2);
		System.out.printf("%d\t%d", (int)ch1,(int)ch2); //ascii code로 변화해서 출력
		
		int a = 65;
		System.out.println(a);
		System.out.println(a+32);
		System.out.println((char)a);
		System.out.println((char)(a+32));
		
		System.out.printf("%c,%c,%c,%c\n",a,a+2,a+33,a+40);
		System.out.printf("%c%c%c%c%c\n",72,101,108,108,111); // char 는 내부적으로 int
		
		
	}
}
